{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "rd",
                "/s",
                "/q",
                "out"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "createOutFolder",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "mkdir",
                "out"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "copyDlls",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "copy",
                "${workspaceFolder}\\Libs\\portaudio\\build\\libportaudio.dll",
                "${workspaceFolder}\\out\\libportaudio.dll"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "dependsOn": [
                "clean",
                "createOutFolder",
                "copyDlls"
            ],
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-g",
                "-o",
                "${workspaceFolder}/out/VowelAnalyser.exe",
                "${workspaceFolder}/VowelAnalyser.cpp",
                "-I${workspaceFolder}/Libs/portaudio/include",
                "-L${workspaceFolder}/Libs/portaudio/build",
                "-lportaudio"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}